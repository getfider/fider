{
  "compilerOptions": {
    "module": "esnext",
    "incremental": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "strict": true,
    "jsx": "react",
    "lib": ["dom", "es2015.promise", "es6", "ES2020.Intl"],
    "baseUrl": ".",
    "noEmit": true,
    "noUnusedLocals": true,
    "paths": {
      "@fider/*": ["./public/*"],
      "@locale/*": ["./locale/*"]
    }
  },
  "include": ["./public/**/*", "./locale/**/*", "index.d.ts", "./e2e/**/*"]
}
