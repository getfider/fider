{
  "name": "fider",
  "version": "0.0.0",
  "repository": "https://github.com/getfider/fider",
  "private": true,
  "dependencies": {
    "dompurify": "2.2.6",
    "marked": "0.7.0",
    "react": "16.10.2",
    "react-dom": "16.10.2",
    "react-icons": "3.7.0",
    "react-stripe-elements": "2.0.3",
    "react-textarea-autosize": "7.1.0",
    "react-toastify": "5.4.0",
    "tslib": "2.0.3"
  },
  "devDependencies": {
    "@types/dompurify": "0.0.33",
    "@types/enzyme": "3.10.3",
    "@types/enzyme-adapter-react-16": "1.0.5",
    "@types/jest": "24.0.18",
    "@types/jsdom": "12.2.4",
    "@types/marked": "0.6.5",
    "@types/node": "12.7.12",
    "@types/puppeteer": "1.20.2",
    "@types/react": "16.9.5",
    "@types/react-dom": "16.9.1",
    "@types/react-stripe-elements": "1.1.10",
    "@types/react-textarea-autosize": "4.3.4",
    "css-loader": "3.2.0",
    "dotenv": "8.1.0",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.15.1",
    "file-loader": "4.2.0",
    "fork-ts-checker-webpack-plugin": "1.5.0",
    "jest": "26.6.3",
    "mini-css-extract-plugin": "0.8.0",
    "node-sass": "4.14.1",
    "prettier": "1.18.2",
    "puppeteer": "3.0.0",
    "reflect-metadata": "0.1.13",
    "sass-loader": "8.0.0",
    "ts-jest": "26.4.4",
    "ts-loader": "6.2.0",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "tslint-react": "4.1.0",
    "typescript": "3.8.3",
    "webpack": "4.44.2",
    "webpack-bundle-analyzer": "3.9.0",
    "webpack-clean-obsolete-chunks": "0.4.0",
    "webpack-cli": "3.3.9"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            "TS6133"
          ]
        }
      }
    },
    "transform": {
      "^.+\\.(tsx|ts)?$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/public/jest.setup.ts"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|tsx|js|jsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^.*\\.(png|scss|svg)$": "<rootDir>/public/jest.assets.ts",
      "@fider/(.*)": "<rootDir>/public/$1"
    }
  },
  "scripts": {
    "heroku-postbuild": "npx webpack -p"
  }
}
