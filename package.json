{
  "name": "fider",
  "version": "0.0.0",
  "repository": "https://github.com/getfider/fider",
  "private": true,
  "dependencies": {
    "@lingui/react": "3.10.2",
    "dompurify": "2.2.7",
    "marked": "2.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-textarea-autosize": "8.3.2",
    "react-toastify": "7.0.3"
  },
  "devDependencies": {
    "@babel/core": "7.14.5",
    "@babel/preset-env": "7.14.5",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.14.5",
    "@cucumber/cucumber": "7.3.1",
    "@lingui/cli": "3.10.2",
    "@lingui/loader": "3.10.2",
    "@lingui/macro": "3.10.2",
    "@playwright/test": "1.12.3",
    "@types/debug": "4.1.6",
    "@types/dompurify": "2.2.1",
    "@types/enzyme": "3.10.8",
    "@types/jest": "26.0.22",
    "@types/jsdom": "16.2.10",
    "@types/marked": "2.0.1",
    "@types/node": "14.14.37",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3",
    "@types/react-textarea-autosize": "4.3.5",
    "@typescript-eslint/eslint-plugin": "4.21.0",
    "@typescript-eslint/parser": "4.21.0",
    "@wojtekmaj/enzyme-adapter-react-17": "0.6.1",
    "autoprefixer": "10.2.5",
    "babel-loader": "8.2.2",
    "babel-plugin-macros": "3.1.0",
    "css-loader": "5.2.1",
    "enzyme": "3.11.0",
    "esbuild": "0.11.6",
    "esbuild-plugin-babel": "0.2.3",
    "eslint": "7.23.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "fork-ts-checker-webpack-plugin": "6.2.1",
    "isomorphic-fetch": "3.0.0",
    "jest": "26.6.3",
    "mini-css-extract-plugin": "1.4.1",
    "node-sass": "5.0.0",
    "playwright": "1.12.3",
    "prettier": "2.2.1",
    "purgecss-webpack-plugin": "4.0.3",
    "sass-loader": "11.0.1",
    "svg-sprite-loader": "6.0.5",
    "ts-jest": "26.5.4",
    "typescript": "4.2.4",
    "webpack": "5.31.0",
    "webpack-bundle-analyzer": "4.4.0",
    "webpack-cli": "4.6.0"
  },
  "lingui": {
    "catalogs": [
      {
        "path": "<rootDir>/locale/{locale}/client",
        "include": [
          "<rootDir>"
        ]
      }
    ],
    "fallbackLocales": {
      "default": "en"
    },
    "sourceLocale": "en",
    "format": "minimal",
    "locales": [
      "pt-BR",
      "fr",
      "de",
      "en"
    ]
  },
  "browserslist": ">1%, not dead",
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            "TS6133"
          ]
        }
      }
    },
    "transform": {
      ".+\\.(tsx|ts)?$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/public/jest.setup.ts"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|tsx|js|jsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      ".*\\.(png|scss|svg)$": "<rootDir>/public/jest.assets.ts",
      "@fider/(.*)": "<rootDir>/public/$1",
      "@locale/(.*)": "<rootDir>/locale/$1"
    }
  },
  "engines": {
    "npm": "7.x",
    "node": "14.x"
  },
  "scripts": {
    "heroku-postbuild": "make build-ssr && make build-ui"
  }
}
